{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["tsc", "^build"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "lint": {},
    "lint:fix": {},
    "prettier:fix": {},
    "tsc": {
      "outputs": ["../../dist-types/**"],
      "dependsOn": ["^tsc"]
    }
  },
  "globalDependencies": ["prettierrc.js"]
}
